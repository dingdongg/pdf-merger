<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="323.0" prefWidth="367.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pdfmerge.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="114.0" text="PDF Merger" translateY="-5.0">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Label>
   <ListView fx:id="selectedFilesPane" prefHeight="200.0" prefWidth="200.0" />
    <Button fx:id="btnChooseFiles" onAction="#onChooseButtonClick" text="Choose 2 PDFs to merge" translateY="-20.0">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin></Button>
   <Button fx:id="btnMerge" mnemonicParsing="false" onAction="#onMergeButtonClick" text="Merge!">
      <VBox.margin>
         <Insets />
      </VBox.margin></Button>
</VBox>
